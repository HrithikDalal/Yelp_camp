<% include ../partials/header %>


        <header class="jumbotron">
            <div class="container">
                <h1>Welcome to YelpCamp!</h1>
                <p>View our hand-picked campgrounds from all over the world</p>
                <a class="btn btn-primary btn-lg" href="/campgrounds/new" role="button">Add New Campground</a>
            </div>
        </header>
        
        <div class = "row text-center">
            <div class= "col-lg-12">
                <h2>Our Most Popular Campgrounds</h2>
            </div>
                <%campgrounds.forEach(function(campground){%>
                <div class="col-lg-3 col-md-4 col-sm-6">
                        <img src="<%=campground.image%>" class="img-thumbnail">
                        <div class="caption"><h5><%=campground.name%></h5></div>
                        <p>
                            <a href="/campgrounds/<%=campground._id%>" class="btn btn-primary">More Info</a>
                        </p>
                </div>
                 <%});%>
        </div>



<% include ../partials/footer %>
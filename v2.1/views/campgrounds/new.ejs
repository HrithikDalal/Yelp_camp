<% include ../partials/header %>
<div style="margin-top:30px;"><h1 style="text-align :center;">Add New Magical Location</h1>
</div>
<div style= "width : 30%; margin: 20px auto;">
    
<form action="/campgrounds" method="POST">
  <div class="form-group" >
    <label for="name">Name</label>
    <input type="text" class="form-control"  name ="name"  placeholder="Enter name of Location">
  </div>
  <div class="form-group" >
    <label for="cost">Cost</label>
    <input type="number" class="form-control"  name ="cost"  placeholder="Cost/night" min="0.01" step="0.01">
  </div>  
  <div class="form-group">
    <label for="image">Image Url</label>
    <input type="text" class="form-control"  name="image" placeholder="Image Url">
  </div>
<!--cd v-->
  <div class="form-group">
    <label for="description">Description</label>
    <textarea class="form-control"  name="discription" placeholder="Description">
    </textarea>
  </div>
  <button type="submit" class="btn btn-primary btn-block">Submit</button>
</form>
<a href="/campgrounds">Go Back</a>
</div>


<% include ../partials/header %>
<div style="margin-top:30px;"><h1 style="text-align :center;">Edit <%=campground.name%></h1>
</div>

<div style= "width : 30%; margin: 20px auto;">
    
<form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
  <div class="form-group" >
    <input type="text" class="form-control"  name ="campground[name]"  value="<%= campground.name %>">
  </div>
  <div class="form-group" >
    <input type="number" class="form-control"  name ="campground[cost]"  value="<%=campground.cost%>" min="0.01" step="0.01">
  </div> 
  <div class="form-group">
    <input type="text" class="form-control"  name="campground[image]" value="<%= campground.image %>">
  </div>
<div class="form-group">
    <label for="location">Location</label>
    <input class="form-control" type="text" name="location" id="location" value="<%= campground.location %>">
</div>
  <div class="form-group">
    <textarea class="form-control"  name="campground[discription]" ><%= campground.discription %></textarea>
  </div>
  <button type="submit" class="btn btn-primary btn-block">Submit</button>
</form>
<a href="/campgrounds">Go Back</a>
</div>
<% include ../partials/footer %>
<% include ../partials/header %>

<h1 style="text-align :center;">Edit <%=campground.name%></h1>

<div style= "width : 30%; margin: 30px auto;">
    
<form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
  <div class="form-group" >
    <input type="text" class="form-control"  name ="campground[name]"  value="<%= campground.name %>">
  </div>
  <div class="form-group">
    <input type="text" class="form-control"  name="campground[image]" value="<%= campground.image %>">
  </div>
  <div class="form-group">
    <textarea class="form-control"  name="campground[discription]" ><%= campground.discription %></textarea>
  </div>
  <button type="submit" class="btn btn-primary btn-block">Submit</button>
</form>
<a href="/campgrounds">Go Back</a>
</div>
<% include ../partials/footer %>
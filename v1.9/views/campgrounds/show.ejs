<%include ../partials/header%>
<div class="row">
 <div class="col-md-3 col-lg-3 col-sm-3">
  <p class="lead">YelpCamp</p>
  <div class="card">
   <ul class="list-group list-group-flush">
    <li class="list-group-item active">Cras</li>
    <li class="list-group-item">Dapibus</li>
    <li class="list-group-item">Vestibulum</li>
   </ul>
  </div>
 </div>


<div class="col-md-9 col-lg-9 col-sm-9">
 <div class="card ">
  <img class="card-img-top img-fluid" src="<%=campground.image%>">
  <div class="card-body">
   <h4 class="float-right">$9.00/night</h4>
   <h4><a><%=campground.name%></a></h4>
   <p><%=campground.discription%></p>
   <p><em>Submtted By <%=campground.author.username%></em></p>
    <% if(currentUser && campground.author.id.equals(currentUser._id)){ %>
    <a class="btn btn-xs btn-warning" href="/campgrounds/<%= campground._id %>/edit">Edit</a>
    <form class="delete-form" action="/campgrounds/<%= campground._id %>?_method=DELETE" method="POST">
     <button class="btn btn-xs btn-danger">Delete</button>
    </form>
     <% }%>
  </div>
 </div>
  <div class="card">
   <div class="card-body">
    <div class="text-right">
     <a class ="btn btn-success" href="/campgrounds/<%= campground._id %>/comments/new">Add Comment</a>
    </div>
    <hr>
    <%campground.comments.forEach(function(comment){%>
     <div class="row">
      <div class="col-md-12">
       <strong><%=comment.author.username%></strong>
       <span class="float-right">10 days ago</span>
       <p><%=comment.text%></p>
       <% if(currentUser && comment.author.id.equals(currentUser._id)){ %>
                            <a class="btn btn-xs btn-warning" 
                               href="/campgrounds/<%=campground._id %>/comments/<%=comment._id %>/edit">Edit</a>
                            <form class="delete-form" action="/campgrounds/<%=campground._id %>/comments/<%=comment._id %>?_method=DELETE" method="POST">
                                <input type="submit" class="btn btn-xs btn-danger" value="Delete">
                            </form>
                        <% } %>
      </div>
     </div> 
    <%})%>
  </div>
 </div>
</div>


<a href="/campgrounds" class ="btn btn-primary">Go back</a>

<%include ../partials/footer%>